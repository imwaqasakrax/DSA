#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;

    int number = 2;
    int sum = 0;

    while (number <= n) {
        sum = sum + number;
        number += 2; // Increment by 2 to consider only even numbers
    }

    cout << "Sum of even numbers from 2 to " << n << ": " << sum << endl;

    return 0;
}
